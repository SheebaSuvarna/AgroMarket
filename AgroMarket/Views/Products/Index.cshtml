@model IEnumerable<AgroMarket.Models.Entities.Product>

@{
    ViewData["Title"] = "Product Dashboard";
}

<h1>Product Dashboard</h1>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Retailer</th>
            <th>Categories</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.StockQuantity</td>
                <td>@product.Retailer?.FarmName</td>
                <td>
                    @if (product.ProductCategory != null && product.ProductCategory.Any())
                    {
                        var categoryNames = product.ProductCategory.Select(pc => pc.Category?.CategoryName);
                        <span>@string.Join(", ", categoryNames)</span>
                    }
                    else
                    {
                        <span>No Categories</span>
                    }
                </td>
                <td>@product.CreatedAt.ToString("g")</td>
                <td>@product.UpdatedAt.ToString("g")</td>
                <td>
                   
                    <form asp-action="AddToOrder" method="post">
                        <input type="hidden" name="productId" value="@product.ProductID" />
                        <input type="number" name="quantity" value="1" min="1" max="@product.StockQuantity" />
                        <button type="submit" class="btn btn-primary">Add to Order</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
