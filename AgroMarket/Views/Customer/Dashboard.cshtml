@model CustomerDashboardViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .order-card {
            transition: all 0.3s ease;
        }

            .order-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            }

        .product-card {
            background-color: #ffffff;
            border-radius: 10px;
            overflow: hidden;
        }

        .status-badge {
            font-size: 0.8rem;
            padding: 0.3rem 0.6rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-shopping-bag mr-2"></i>My Orders</h1>

        <!-- Feedback Message -->
        @if (TempData["FeedbackMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle mr-2"></i>@TempData["FeedbackMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <!-- Orders List -->
        @foreach (var order in Model.Orders)
        {
            <div class="card order-card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="far fa-calendar-alt mr-2"></i>Order Date: @order.OrderDate.ToShortDateString()</h5>
@*                     <span class="status-badge badge badge-light">@order.Status</span>
 *@                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p><i class="fas fa-money-bill-wave mr-2"></i>Total Amount: <strong>@order.TotalAmount.ToString("C")</strong></p>
                        </div>
                        <button class="btn btn-outline-primary" onclick="toggleOrderDetails('@order.OrderID')">
                            <i class="fas fa-chevron-down mr-2"></i>View Details
                        </button>
                    </div>

                    <!-- Order Details (initially hidden) -->
                    <div id="orderDetails-@order.OrderID" class="mt-4" style="display: none;">
                        <h6><i class="fas fa-box-open mr-2"></i>Products in this Order:</h6>
                        <div class="row">
                            @if (order.OrderItem != null && order.OrderItem.Any())
                            {
                                @foreach (var item in order.OrderItem)
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="product-card p-3 border">
                                            <h6 class="card-title"><i class="fas fa-tag mr-2"></i>@item.Product?.ProductName</h6>
                                            <h6 class="card-title"><i class="fas fa-box-open mr-2"></i>@item.Status</h6>
                                            <h6 class="card-title"><i class="fas fa-money-bill-wave mr-2"></i>@item.Price</h6>
                                            <h6 class="card-title"><i class="fas fa-shopping-bag mr-2"></i>@item.Quantity</h6>
                                            <p><i class="fas fa-store mr-2"></i>Retailer: @item.Product?.Retailer?.FirstName @item.Product?.Retailer?.LastName</p>
                                            <button class="btn btn-sm btn-info btn-block mt-2" onclick="openFeedbackModal('@item.ProductID', '@item.Product?.ProductName', '@order.OrderID')">
                                                <i class="far fa-comment mr-2"></i>Leave Feedback
                                            </button>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12">
                                    <p class="text-muted"><i class="fas fa-exclamation-circle mr-2"></i>No products found for this order.</p>
                                </div>
                            }
                        </div>
                        <a href="@Url.Action("GenerateInvoicePdf", "Customer", new { orderId = order.OrderID })" class="btn btn-outline-secondary btn-block mt-3">
                            <i class="fas fa-file-download mr-2"></i>Download Invoice
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Feedback Modal -->
    <div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title" id="feedbackModalLabel"><i class="far fa-comment mr-2"></i>Leave Feedback</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="feedbackForm" method="post" action="@Url.Action("SubmitFeedback", "Customer")">
                        <input type="hidden" name="orderId" id="modalOrderId">
                        <input type="hidden" name="productId" id="modalProductId">

                        <div class="form-group">
                            <label for="modalProductName"><i class="fas fa-box mr-2"></i>Product:</label>
                            <input type="text" class="form-control" id="modalProductName" readonly>
                        </div>

                        <div class="form-group">
                            <label for="modalRating"><i class="fas fa-star mr-2"></i>Rating (1 to 5):</label>
                            <select name="rating" id="modalRating" class="form-control" required>
                                <option value="">Select Rating</option>
                                <option value="1">1 - Poor</option>
                                <option value="2">2 - Fair</option>
                                <option value="3">3 - Average</option>
                                <option value="4">4 - Good</option>
                                <option value="5">5 - Excellent</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="modalComment"><i class="fas fa-comment-alt mr-2"></i>Comment:</label>
                            <textarea name="comment" id="modalComment" class="form-control" rows="3"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success btn-block">
                            <i class="fas fa-paper-plane mr-2"></i>Submit Feedback
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleOrderDetails(orderId) {
            $('#orderDetails-' + orderId).slideToggle();
        }

        function openFeedbackModal(productId, productName, orderId) {
            $('#modalProductId').val(productId);
            $('#modalOrderId').val(orderId);
            $('#modalProductName').val(productName);
            $('#feedbackModal').modal('show');
        }

        function refreshPage() {
            location.reload();
        }
    </script>
</body>
</html>
