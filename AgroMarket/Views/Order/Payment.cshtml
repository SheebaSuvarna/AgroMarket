@model AgroMarket.Models.Entities.Order

<div class="payment-container">
    <div class="payment-box">
        <h2 class="text-center">Payment</h2>

        <p><strong>Order ID:</strong> @Model.OrderID</p>
        <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>

        <form id="confirmPaymentForm" method="post" asp-action="ConfirmPayment" asp-route-orderId="@Model.OrderID">
            <button type="submit" class="btn btn-success btn-block" id="confirmPaymentBtn">Confirm Payment</button>
        </form>

        <!-- Spinner Loader -->
        <div id="loadingMessage" style="display:none;">
            <div class="spinner"></div>
            <p class="mt-2">Please wait, confirming your order...</p>
        </div>
    </div>
</div>

<!-- CSS for Central Rectangle and Blur Effect -->
<style>
    /* Full-page blur effect */
    .payment-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background: rgba(173, 216, 230, 0.5); /* Light pastel blue with 50% transparency */
        backdrop-filter: blur(10px); /* Blur effect */
    }

    /* Centered yellow box */
    .payment-box {
        background-color: #fff3cd; /* Light yellow color */
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3); /* Shadow for depth */
        max-width: 400px;
        text-align: center;
    }

    /* Spinner styles */
    .spinner {
        border: 8px solid #f3f3f3; /* Light gray */
        border-top: 8px solid #28a745; /* Green */
        border-radius: 50%;
        width: 80px;
        height: 80px;
        animation: spin 2s linear infinite;
        margin: 0 auto;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Center the loader */
    #loadingMessage {
        text-align: center;
        font-size: 1.2rem;
        color: #28a745;
    }
</style>

<!-- JavaScript for Button and Spinner -->
<script>
    document.getElementById("confirmPaymentForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Prevent default form submission

        // Show the loading message (spinner) and hide the form button
        document.getElementById("loadingMessage").style.display = "block";
        document.getElementById("confirmPaymentBtn").style.display = "none";

        // Simulate a delay (e.g., 3 seconds) before proceeding
        setTimeout(function () {
            // Submit the form after the delay
            document.getElementById("confirmPaymentForm").submit();
        }, 3000); // 3000 milliseconds = 3 seconds delay
    });
</script>
