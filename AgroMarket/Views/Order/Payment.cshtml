@model AgroMarket.Models.Entities.Order
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Confirmation</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .payment-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #7fc8f8, #89d0be);
        }

        .payment-box {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            max-width: 400px;
            width: 100%;
        }

        .payment-title {
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .order-details {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .btn-confirm {
            background-color: #28a745;
            border: none;
            padding: 0.75rem;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-confirm:hover {
                background-color: #218838;
                transform: translateY(-2px);
            }

        .spinner-border {
            width: 3rem;
            height: 3rem;
        }

        #loadingMessage {
            background-color: rgba(255, 255, 255, 0.9);
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border-radius: 15px;
        }
    </style>
</head>
<body>
    <div class="payment-container">
        <div class="payment-box position-relative">
            <h2 class="text-center payment-title">Payment Confirmation</h2>
            <div class="order-details mb-4">
                <p class="mb-2"><strong>Order ID:</strong> <span class="float-end">@Model.OrderID</span></p>
                <p class="mb-0"><strong>Total Amount:</strong> <span class="float-end">@Model.TotalAmount.ToString("C")</span></p>
            </div>
            <form id="confirmPaymentForm" method="post" asp-action="ConfirmPayment" asp-route-orderId="@Model.OrderID">
                <button type="submit" class="btn btn-confirm btn-block w-100" id="confirmPaymentBtn">
                    Confirm Payment
                </button>
            </form>
            <div id="loadingMessage" style="display:none;">
                <div class="spinner-border text-success mb-3" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mb-0">Please wait, confirming your order...</p>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("confirmPaymentForm").addEventListener("submit", function (event) {
            event.preventDefault();
            document.getElementById("loadingMessage").style.display = "flex";
            document.getElementById("confirmPaymentBtn").style.display = "none";
            setTimeout(function () {
                document.getElementById("confirmPaymentForm").submit();
            }, 3000);
        });
    </script>
</body>
</html>