@using AgroMarket.ViewModels;
@model ChangePassword;

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Change Password</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('/images/newbgg.jpg');
            background-size: cover;
            font-family: 'Roboto', sans-serif;
            opacity: 0.8;
        }

        .container {
            background: #4a5d23;
            border-radius: 20px;
            padding: 40px;
            width: 400px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            margin-top: 40px;
            margin-bottom: 40px;
        }

        h2 {
            color: white;
            text-align: center;
            margin-bottom: 20px;
            font-size: 36px;
            font-family: 'Roboto', sans-serif;
        }

        .form-label {
            color: white;
        }

        .field-container {
            display: flex;
            flex-direction: column;
            margin-bottom: 25px;
            position: relative;
        }

            .field-container label {
                color: white;
                font-weight: bold;
            }

            .field-container input {
                padding: 10px;
                border: none;
                border-radius: 10px;
                background: white;
                color: black;
                width: 100%;
                box-sizing: border-box;
            }

        .text-danger {
            color: yellow;
            position: absolute;
            top: 100%;
            left: 0;
            font-size: 12px;
            margin-top: 5px;
        }

        .btn {
            padding: 10px 20px;
            background: #f5a623;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
            width: 100%;
            margin-top: 20px;
        }

            .btn:hover {
                background: #e0941d;
            }

        .text-center a {
            color: white;
            text-decoration: none;
        }

            .text-center a:hover {
                color: #f5a623;
                text-decoration: underline;
            }
            @@media (max-width: 768px) {
            h2 {
                font-size: 28px; /* Smaller font size for tablets */
            }

            .container {
                padding: 20px; /* Reduce padding on smaller screens */
            }
        }

        @@media (max-width: 480px) {
            h2 {
                font-size: 24px; /* Smaller font size for mobile */
            }

            .btn {
                font-size: 14px; /* Smaller button text */
            }

            .container {
                width: 95%; /* Slightly wider on very small screens */
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Change Password</h2>
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="field-container">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="field-container">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="field-container">
                <label asp-for="ConfirmNewPassword" class="form-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <input type="submit" value="Submit" class="btn" />
            <div class="text-center mt-2">
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none mt-3">Back</a>
            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
