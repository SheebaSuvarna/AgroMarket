@{
    ViewData["Title"] = "Select Role";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Select Role</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('/images/newbgg.jpg');
            background-size: cover;
            font-family: 'Roboto', sans-serif;
            opacity: 0.8;
        }

        .container {
            background: #4a5d23;
            border-radius: 20px;
            padding: 40px;
            width: 400px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            margin-top: 40px;
            margin-bottom: 40px;
        }

        h2 {
            color: white;
            text-align: center;
            margin-bottom: 20px;
            font-size: 36px;
        }

        .btn {
            padding: 10px 20px;
            background: #f5a623;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
            width: 100%;
            margin-top: 20px;
        }

            .btn:hover {
                background: #e0941d;
            }

        .account-box {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        /* Media Queries for Responsiveness */
        @@media (max-width: 768px) {
            h2 {
                font-size: 28px; 
            }

            .container {
                padding: 20px; 
            }
        }

        @@media (max-width: 480px) {
            h2 {
                font-size: 24px; 
            }

            .btn {
                font-size: 14px;
            }

            .container {
                width: 95%; 
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Select Your Role</h2>
        <form asp-action="RoleSelected" method="post">
            <button type="submit" name="role" value="Customer" class="btn">Login as Customer</button>
            <button type="submit" name="role" value="Retailer" class="btn">Login as Retailer</button>
        </form>
    </div>
</body>
</html>
