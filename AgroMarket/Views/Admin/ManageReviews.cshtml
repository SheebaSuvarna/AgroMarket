@model IEnumerable<AgroMarket.Models.Entities.Review>

<h1>Manage Reviews</h1>

<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Customer</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Product.ProductName</td>
                <td>@review.Customer.FirstName @review.Customer.LastName</td>
                <td>@review.Rating</td>
                <td>@review.Comment</td>
                <td>
                    @if (!review.Approved)
                    {
                        <form asp-action="ApproveReview" asp-route-id="@review.ReviewID" method="post" style="display:inline;">
                            <button type="submit">Approve</button>
                        </form>
                    }
                    <form asp-action="DeleteReview" asp-route-id="@review.ReviewID" method="post" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
