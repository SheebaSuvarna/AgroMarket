@model AgroMarket.Models.Entities.Product

<h1 class="text-center mb-4">Edit Product</h1>

<div class="container">
    <form asp-action="EditProduct" asp-route-id="@Model.ProductID" method="post" class="shadow p-4 rounded bg-light">
        <div class="form-group mb-3">
            <label for="ProductName" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="ProductName" name="ProductName" value="@Model.ProductName" required placeholder="Enter product name" />
        </div>

        <div class="form-group mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea class="form-control" id="Description" name="Description" rows="4" placeholder="Provide a brief description of the product">@Model.Description</textarea>
        </div>

        <div class="form-row mb-3">
            <div class="col">
                <label for="Price" class="form-label">Price</label>
                <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" step="0.01" required placeholder="Enter price" />
            </div>
            <div class="col">
                <label for="StockQuantity" class="form-label">Stock Quantity</label>
                <input type="number" class="form-control" id="StockQuantity" name="StockQuantity" value="@Model.StockQuantity" required placeholder="Available stock" />
            </div>
        </div>

        <div class="form-group mb-3">
            <label for="ProductImage" class="form-label">Product Image (optional)</label>
            <input type="file" class="form-control" id="ProductImage" name="ProductImage" accept="image/*" />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Dashboard" asp-route-activeTab="products" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
