@model IEnumerable<AgroMarket.Models.Entities.Product>

<h1>Manage Produce</h1>

<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td>
                    <a href="/admin/edit-product/@product.ProductID">Edit</a> |
                    <form asp-action="DeleteProduct" asp-route-id="@product.ProductID" method="post" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
