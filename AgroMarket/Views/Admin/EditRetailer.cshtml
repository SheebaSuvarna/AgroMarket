@model AgroMarket.Models.Entities.Retailer

@{
    ViewData["Title"] = "Edit Retailer";
}

<div class="container mt-4">
    <h1 class="text-left mb-4">Edit Retailer</h1>
    <h4 class="text-muted mb-3">Update Retailer Information</h4>
    <hr class="my-4" />

    <form asp-action="EditRetailer" method="post" class="shadow p-4 rounded bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="RetailerID" />

        <div class="form-group mb-4">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter Email Address" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="FarmName" class="form-label">Farm Name</label>
            <input asp-for="FarmName" class="form-control" placeholder="Enter Farm Name" required />
            <span asp-validation-for="FarmName" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group text-left">
            <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
            <a asp-action="Dashboard" asp-route-activeTab="retailers" class="btn btn-secondary btn-lg ms-2">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
