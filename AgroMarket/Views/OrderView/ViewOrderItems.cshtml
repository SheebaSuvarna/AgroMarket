@model IEnumerable<AgroMarket.Models.Entities.OrderItem>

@{
    ViewData["Title"] = "View Orders";
    string currentSort = ViewBag.CurrentSort as string;
}

<h2>Order Items</h2>

<!-- Search Bar -->
<form method="get" asp-action="ViewOrderItems" class="form-inline mb-3">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by Product Name" value="@ViewBag.CurrentFilter" />
    </div>
    <button type="submit" class="btn btn-primary ml-2">Search</button>
</form>

<!-- Custom Sort Options -->
<div class="d-flex align-items-center mb-3">
    <span class="mr-2">Sort By:</span>
    <div class="btn-group" role="group" aria-label="Sort options">
        @* <a asp-action="ViewOrderItems" asp-route-sortOrder="popularity" class="btn btn-outline-secondary @(currentSort == "popularity" ? "active" : "")">Popularity</a> *@
        <a asp-action="ViewOrderItems" asp-route-sortOrder="price_asc" class="btn btn-outline-secondary @(currentSort == "price_asc" ? "active" : "")">Price -- Low to High</a>
        <a asp-action="ViewOrderItems" asp-route-sortOrder="price_desc" class="btn btn-outline-secondary @(currentSort == "price_desc" ? "active" : "")">Price -- High to Low</a>
        <a asp-action="ViewOrderItems" asp-route-sortOrder="newest" class="btn btn-outline-secondary @(currentSort == "newest" ? "active" : "")">Newest First</a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Order Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Order?.OrderID</td>
                <td>@item.Order?.OrderDate.ToShortDateString()</td>
                <td>@item.Product?.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Order?.Status </td>
                <td>
                    @if (item.Order?.Status == "Completed")
                    {
                        <form asp-action="UpdateOrderStatus" method="post">
                            <input type="hidden" name="orderId" value="@item.Order?.OrderID" />
                            <button type="submit" name="newStatus" value="Out for Delivery" class="btn btn-success">Accept</button>
                            <button type="submit" name="newStatus" value="Order Cancelled" class="btn btn-danger">Cancel Order</button>
                        </form>
                    }
                    else if (item.Order?.Status == "Pending")
                    {
                        <span>Payment Pending</span>
                    }
                    else
                    {
                        <span>@item.Order?.Status ?? "N/A"</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
